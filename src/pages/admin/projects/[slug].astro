---
export const prerender = false;

import AdminLayout from '../../../components/admin/AdminLayout.astro';
import ImageUploader from '../../../components/admin/ImageUploader.astro';
import { supabaseAdmin } from '../../../lib/supabase';
import { markContentModified } from '../../../lib/deploy';

const { slug } = Astro.params;

let error = '';
let success = false;

// Handle form submissions
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action');

  if (action === 'delete') {
    const { error: deleteError } = await supabaseAdmin
      .from('projects')
      .delete()
      .eq('slug', slug);

    if (deleteError) {
      error = deleteError.message;
    } else {
      await markContentModified();
      return Astro.redirect('/admin/projects');
    }
  } else {
    const title = formData.get('title') as string;
    const newSlug = formData.get('slug') as string;
    const info = formData.get('info') as string;
    const year = formData.get('year') as string;
    const category = formData.get('category') as string;
    const projectStatus = formData.get('project_status') as string;
    const photoCredit = formData.get('photo_credit') as string;
    const status = formData.get('status') as string;
    const sortOrder = formData.get('sort_order') as string;
    const imagesRaw = formData.get('images') as string;

    const images = imagesRaw
      .split('\n')
      .map((url) => url.trim())
      .filter(Boolean);

    const { error: updateError } = await supabaseAdmin
      .from('projects')
      .update({
        title,
        slug: newSlug,
        info,
        year,
        category,
        project_status: projectStatus,
        photo_credit: photoCredit,
        status,
        sort_order: sortOrder ? parseInt(sortOrder) : null,
        images,
        modified: new Date().toISOString(),
      })
      .eq('slug', slug);

    if (updateError) {
      error = updateError.message;
    } else {
      await markContentModified();
      if (newSlug !== slug) {
        return Astro.redirect(`/admin/projects/${newSlug}`);
      }
      success = true;
    }
  }
}

// Fetch project
const { data: project } = await supabaseAdmin
  .from('projects')
  .select('*')
  .eq('slug', slug)
  .single();

if (!project) {
  return Astro.redirect('/admin/projects');
}
---

<AdminLayout title={`Edit: ${project.title}`}>
  <div class="max-w-2xl">
    {error && (
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded text-sm">{error}</div>
    )}
    {success && (
      <div class="mb-4 p-3 bg-green-100 text-green-700 rounded text-sm">Project saved successfully!</div>
    )}

    <form method="POST" class="space-y-4 bg-white p-6 rounded-lg shadow">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="title" class="block text-sm font-medium mb-1">Title *</label>
          <input
            type="text"
            id="title"
            name="title"
            value={project.title}
            required
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label for="slug" class="block text-sm font-medium mb-1">Slug *</label>
          <input
            type="text"
            id="slug"
            name="slug"
            value={project.slug}
            required
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="year" class="block text-sm font-medium mb-1">Year</label>
          <input
            type="text"
            id="year"
            name="year"
            value={project.year || ''}
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label for="category" class="block text-sm font-medium mb-1">Category</label>
          <input
            type="text"
            id="category"
            name="category"
            value={project.category || ''}
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="info" class="block text-sm font-medium mb-1">Info (size)</label>
          <input
            type="text"
            id="info"
            name="info"
            value={project.info || ''}
            placeholder="e.g., 200mÂ²"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label for="project_status" class="block text-sm font-medium mb-1">Project Status</label>
          <input
            type="text"
            id="project_status"
            name="project_status"
            value={project.project_status || ''}
            placeholder="e.g., Completed"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <div>
        <label for="photo_credit" class="block text-sm font-medium mb-1">Photo Credit</label>
        <input
          type="text"
          id="photo_credit"
          name="photo_credit"
          value={project.photo_credit || ''}
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="status" class="block text-sm font-medium mb-1">Publish Status</label>
          <select
            id="status"
            name="status"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="publish" selected={project.status === 'publish'}>Published</option>
            <option value="draft" selected={project.status === 'draft'}>Draft</option>
          </select>
        </div>
        <div>
          <label for="sort_order" class="block text-sm font-medium mb-1">Sort Order</label>
          <input
            type="number"
            id="sort_order"
            name="sort_order"
            value={project.sort_order ?? ''}
            placeholder="0 = first"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <ImageUploader images={project.images || []} inputName="images" />

      <div class="flex gap-4 pt-4 border-t">
        <button
          type="submit"
          class="px-4 py-2 bg-[#1a1a2e] text-white rounded hover:bg-[#2a2a4e]"
        >
          Save Changes
        </button>
        <a href="/admin/projects" class="px-4 py-2 border rounded hover:bg-gray-50">
          Cancel
        </a>
        <button
          type="submit"
          name="_action"
          value="delete"
          class="ml-auto px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
          onclick="return confirm('Delete this project?')"
        >
          Delete
        </button>
      </div>
    </form>
  </div>
</AdminLayout>
