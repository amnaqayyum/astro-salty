---
export const prerender = false;

import AdminLayout from '../../../components/admin/AdminLayout.astro';
import { supabaseAdmin } from '../../../lib/supabase';

const { data: pressItems } = await supabaseAdmin
  .from('press_items')
  .select('id, title, slug, date, link')
  .order('created_at', { ascending: false });
---

<AdminLayout title="Press">
  <div class="mb-4">
    <a
      href="/admin/press/new"
      class="inline-block px-4 py-2 bg-[#1a1a2e] text-white rounded hover:bg-[#2a2a4e]"
    >
      + New Press Item
    </a>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Title</th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Date</th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Link</th>
          <th class="px-4 py-3 text-right text-sm font-medium text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y">
        {pressItems?.map((item) => (
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3">
              <a href={`/admin/press/${item.slug}`} class="text-blue-600 hover:underline">
                {item.title}
              </a>
            </td>
            <td class="px-4 py-3 text-gray-600">{item.date}</td>
            <td class="px-4 py-3">
              <a href={item.link} target="_blank" class="text-gray-600 hover:underline text-sm truncate block max-w-xs">
                {item.link}
              </a>
            </td>
            <td class="px-4 py-3 text-right">
              <a href={`/admin/press/${item.slug}`} class="text-blue-600 hover:underline text-sm">
                Edit
              </a>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</AdminLayout>
