---
export const prerender = false;

import AdminLayout from '../../../components/admin/AdminLayout.astro';
import { supabaseAdmin } from '../../../lib/supabase';
import { markContentModified } from '../../../lib/deploy';

const { slug } = Astro.params;

let error = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action');

  if (action === 'delete') {
    const { error: deleteError } = await supabaseAdmin
      .from('press_items')
      .delete()
      .eq('slug', slug);

    if (deleteError) {
      error = deleteError.message;
    } else {
      await markContentModified();
      return Astro.redirect('/admin/press');
    }
  } else {
    const title = formData.get('title') as string;
    const newSlug = formData.get('slug') as string;
    const date = formData.get('date') as string;
    const link = formData.get('link') as string;
    const info = formData.get('info') as string;
    const category = formData.get('category') as string;

    const { error: updateError } = await supabaseAdmin
      .from('press_items')
      .update({
        title,
        slug: newSlug,
        date,
        link,
        info,
        category,
      })
      .eq('slug', slug);

    if (updateError) {
      error = updateError.message;
    } else {
      await markContentModified();
      if (newSlug !== slug) {
        return Astro.redirect(`/admin/press/${newSlug}`);
      }
    }
  }
}

const { data: pressItem } = await supabaseAdmin
  .from('press_items')
  .select('*')
  .eq('slug', slug)
  .single();

if (!pressItem) {
  return Astro.redirect('/admin/press');
}
---

<AdminLayout title={`Edit: ${pressItem.title}`}>
  <div class="max-w-2xl">
    {error && (
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded text-sm">{error}</div>
    )}

    <form method="POST" class="space-y-4 bg-white p-6 rounded-lg shadow">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="title" class="block text-sm font-medium mb-1">Title *</label>
          <input
            type="text"
            id="title"
            name="title"
            value={pressItem.title}
            required
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label for="slug" class="block text-sm font-medium mb-1">Slug *</label>
          <input
            type="text"
            id="slug"
            name="slug"
            value={pressItem.slug}
            required
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="date" class="block text-sm font-medium mb-1">Date *</label>
          <input
            type="text"
            id="date"
            name="date"
            value={pressItem.date}
            required
            placeholder="e.g., October 2024"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label for="category" class="block text-sm font-medium mb-1">Category</label>
          <input
            type="text"
            id="category"
            name="category"
            value={pressItem.category || ''}
            placeholder="e.g., Press"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <div>
        <label for="link" class="block text-sm font-medium mb-1">Link *</label>
        <input
          type="url"
          id="link"
          name="link"
          value={pressItem.link}
          required
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="info" class="block text-sm font-medium mb-1">Info / Subtitle</label>
        <input
          type="text"
          id="info"
          name="info"
          value={pressItem.info || ''}
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div class="flex gap-4 pt-4 border-t">
        <button
          type="submit"
          class="px-4 py-2 bg-[#1a1a2e] text-white rounded hover:bg-[#2a2a4e]"
        >
          Save Changes
        </button>
        <a href="/admin/press" class="px-4 py-2 border rounded hover:bg-gray-50">
          Cancel
        </a>
        <button
          type="submit"
          name="_action"
          value="delete"
          class="ml-auto px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
          onclick="return confirm('Delete this press item?')"
        >
          Delete
        </button>
      </div>
    </form>
  </div>
</AdminLayout>
